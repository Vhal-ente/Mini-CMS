generator client {
provider = "prisma-client-js"
}


datasource db {
provider = "postgresql"
url = env("DATABASE_URL")
 directUrl = env("DIRECT_URL")
}


model Article {
id String @id @default(cuid())
title String
slug String @unique
content String?
parentId String?
parent Article? @relation("ArticleChildren", fields: [parentId], references: [id])
children Article[] @relation("ArticleChildren")
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}